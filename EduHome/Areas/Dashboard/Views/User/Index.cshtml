@model List<UserViewModel>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category List</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Fullname
                                        </th>
                                        <th>
                                            Username
                                        </th>
                                        <th>
                                            Roles
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr class="table-light">
                                            <td>
                                                @user.Fullname
                                            </td>
                                            <td>
                                                @user.Username
                                            </td>
                                            <td>
                                                @user.Roles
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="GetRoles" asp-route-id="@user.Id">Manage Roles</a>
                                                <a class="btn btn-warning" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                                                <a class="btn btn-danger" id="DeleteCat" asp-action="ToggleBlock" asp-route-id="@user.Id">@(user.IsActive ? "Block User" : "Unblock User")</a>
                                                

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

