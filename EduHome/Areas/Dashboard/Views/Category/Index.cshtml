@model List<Category>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category List</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            id
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Count
                                        </th>
                                        <th>
                                            <a class="btn btn-success" asp-controller="Category" asp-action="Create">Create</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr class="table-dark">
                                            <td>
                                                @category.Id
                                            </td>
                                            <td>
                                                @category.Name
                                            </td>
                                            <td>
                                                @category.Count
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">Detail</a>
                                                <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                                <a class="btn btn-danger" id="DeleteCat" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
