@model List<Blog>

@{
    ViewBag.Title = "List of Blogs";
    Layout = "_Layout";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blogs List</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>
                                        Id
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        <a class="btn btn-success" asp-controller="Blog" asp-action="Create">Create</a>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="table-dark">
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            <img src="~/assets/img/blog/@item.Image" alt="@item.Image" style="width: 200px; height: 200px">
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                            <a class="btn btn-warning" asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                            <a class="btn btn-danger" id="DeleteCat" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
