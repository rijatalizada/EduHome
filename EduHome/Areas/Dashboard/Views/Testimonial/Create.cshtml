@model TestimonialVM

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create new Testimonial</h4>
                        <form class="forms-sample" method="post" asp-controller="Testimonial" asp-action="Create" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Faculty</label>
                                <input asp-for="Faculty" class="form-control" placeholder="Faculty"/>
                                <span asp-validation-for="Faculty" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea asp-for="Desc" class="form-control" placeholder="Desc"></textarea>
                                <span asp-validation-for="Desc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>AcademicDegree</label>
                                <input asp-for="AcademicDegree" class="form-control" placeholder="AcademicDegree">
                                <span asp-validation-for="AcademicDegree" class="text-danger"></span>
                            </div> 
                            <div class="form-group">
                                <label>Order</label>
                                <input asp-for="Order" class="form-control" placeholder="Order">
                                <span asp-validation-for="Order" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Image</label>
                                <input accept="image/*" asp-for="ImageFile" class="form-control" placeholder="Image">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light" asp-controller="Testimonial" asp-action="Index">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

