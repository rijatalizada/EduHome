@model List<HeaderSlider>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <a asp-action="CreateMultiple" class="btn btn-primary text-white">Create multiple sliders with same Title, but different Images</a>
                    <div class="card-body">
                        <h4 class="card-title">Sliders List</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>
                                        id
                                    </th>
                                    <th>
                                        Main Title
                                    </th>
                                    <th>
                                        Image
                                    </th>

                                    <th>
                                        <a class="btn btn-success" asp-controller="HomeHeaderSlider" asp-action="Create">Create</a>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr class="table-dark">
                                        <td>
                                            @slider.Id
                                        </td>
                                        <td>
                                            @slider.Title
                                        </td>
                                        <td>
                                            <img src="~/assets/img/slider/@slider.Image" alt="@slider.TitleH2" style="width: 200px; height: 200px">
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-controller="HomeHeaderSlider" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                                            <a class="btn btn-warning" asp-controller="HomeHeaderSlider" asp-action="Update" asp-route-id="@slider.Id">Update</a>
                                            <a class="btn btn-danger" id="DeleteCat" asp-controller="HomeHeaderSlider" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
