@model Course

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="main-panel">
    <div class="content-wrapper">
        <a asp-action="Index" class="btn btn-primary mb-2 tex-white">Back</a>
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Name </h3>
                        

                        <p>About: <span>@Model.About</span></p>
                        
                        <p>
                            Description: @Model.Description
                        </p>

                        <p>
                            Assessment: @Model.Assessment.Name
                        </p>
                        <div class="card-body">
                            <h4 class="text-danger card-title mb-2 mt-2">Do You Want To Delete This Teacher?</h4>
                            <form method="post" asp-controller="Course" asp-action="Delete">
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <button class="btn btn-primary text-white" asp-action="Index" asp-controller="Teacher">Cancel</button>
                            </form>
                        </div>
                        <p>Certification: @Model.Certification</p>

                        <p>Duration: @Model.Duration</p>
                        
                        <p>Class Duration: @Model.ClassDuration</p>
                        
                        <p>Fee: @Model.Fee</p>
                        
                        <p>Students: @Model.Students</p>
            
                        <p>HowToApply: @Model.HowToApply</p>
                        
                        <p>Start Date: @Model.StartDate.ToString("dd, MMM yyyy")</p>
                        


                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Related Categories:</h4>
                        <ul>
                            @foreach (var category in Model.CourseCategories)
                            {
                                <li>@category.Category.Name</li>
                            }
                        </ul>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Languages:</h4>
                        <ul>
                            @foreach (var language in Model.CourseLanguages)
                            {
                                <li>@language.Language.Name</li>
                            }
                        </ul>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Image:</h4>
                            <img src="~/assets/img/course/@Model.Image" alt="@Model.Name" class="img-fluid"/>
                        </div>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
