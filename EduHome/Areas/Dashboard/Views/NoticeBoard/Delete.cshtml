@model HomeNoticePage

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Post : @Html.Raw(Model.Description)</h4>
                    
                        <p>
                            Date : @Model.PostDate.ToString("dd, MMM yyyy")
                        </p>
                    </div>
                    <
                    <div class="card-body">
                        <h4 class="text-danger">Do You Want To Delete This Post?</h4>
                        <form method="post" asp-controller="NoticeBoard" asp-action="Delete">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <button class="btn btn-primary" asp-action="Index" asp-controller="Category">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>